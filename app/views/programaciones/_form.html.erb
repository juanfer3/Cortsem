<%= simple_form_for(@programacion) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :pedido %>
    <%= f.input :f_entrega %>
    <%= f.input :prenda %>
    <%= f.input :pieza %>
    <%= f.input :talla %>
    <%= f.association :telas %>
    <%= f.input :cantidad %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
